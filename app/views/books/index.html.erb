<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <td>本のタイトル</td>
      <td>本の内容</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destroy</td>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create book' %>
  </div>
<% end %>
